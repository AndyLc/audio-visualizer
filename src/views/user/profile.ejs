<div class="container" >
	<h2>Your profile...</h2>
	<form class="form-horizontal" role="form" name="signInForm" action="/users/edit" method="post">
		<div class="form-group">
			<label class="control-label col-sm-2" for="email" style="padding-top: 0px">Email:</label>
				<div class="col-sm-10" style="padding-left: 10px">
					<%= user.email %>
					<input type="email" class="form-control" id="email" name="email" placeholder="New email" style="display: block; max-width: 300px;  margin-top: 5px;">
				</div>
		</div>
		<div class="col-sm-offset-2 col-sm-10" style="padding-left: 1px; margin-bottom: 10px;">
			<a href="/users/changepassword">Change Password?</a>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-default">Submit</button>
			</div>
		</div>
	</form>
</div>
